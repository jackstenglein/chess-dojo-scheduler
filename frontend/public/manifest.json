{
    "name": "Chess Dojo Scheduler",
    "short_name": "ChessDojo",
    "description": "Train chess with the Chess Dojo community",
    "start_url": "/",
    "scope": "/",
    "id": "chessdojo-scheduler",
    "display": "standalone",
    "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
    "orientation": "any",
    "theme_color": "#1e3c72",
    "background_color": "#ffffff",
    "lang": "en",
    "dir": "ltr",
    "categories": ["education", "games", "sports", "productivity", "lifestyle"],
    "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
    "prefer_related_applications": false,
    "edge_side_panel": {
        "preferred_width": 480
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate",
    "icons": [
        {
            "src": "/assets/logo_orange_16.svg",
            "sizes": "16x16",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/assets/logo_orange_32.svg",
            "sizes": "32x32",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/assets/logo_orange_192.svg",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/assets/logo_orange_512.svg",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/assets/logo_orange_180.svg",
            "sizes": "180x180",
            "type": "image/png",
            "purpose": "any"
        }
    ],
    "screenshots": [
        {
            "src": "/static/screenshots/desktop-homepage.png",
            "sizes": "1280x720",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Chess Dojo Homepage - Desktop View"
        },
        {
            "src": "/static/screenshots/mobile-profile.png",
            "sizes": "390x844",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Chess Training Profile - Mobile View"
        }
    ],
    "shortcuts": [
        {
            "name": "My Profile",
            "short_name": "Profile",
            "description": "View your chess training progress and statistics",
            "url": "/profile",
            "icons": [
                {
                    "src": "/assets/logo_orange_192.svg",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Games Library",
            "short_name": "Games",
            "description": "Browse and analyze your chess games",
            "url": "/games",
            "icons": [
                {
                    "src": "/assets/logo_orange_192.svg",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Training Courses",
            "short_name": "Courses",
            "description": "Access chess training courses and materials",
            "url": "/courses",
            "icons": [
                {
                    "src": "/assets/logo_orange_192.svg",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Scoreboard",
            "short_name": "Scoreboard",
            "description": "View community rankings and achievements",
            "url": "/scoreboard",
            "icons": [
                {
                    "src": "/assets/logo_orange_192.svg",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "protocol_handlers": [
        {
            "protocol": "web+chessdojo",
            "url": "/games/import?pgn=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/games/import",
            "accept": {
                "application/x-chess-pgn": [".pgn"],
                "text/plain": [".pgn"]
            }
        }
    ],
    "share_target": {
        "action": "/games/import",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "pgn_file",
                    "accept": ["application/x-chess-pgn", ".pgn"]
                }
            ]
        }
    },
    "related_applications": [
        {
            "platform": "play",
            "url": "https://play.google.com/store/apps/details?id=com.chessdojo.scheduler",
            "id": "com.chessdojo.scheduler"
        },
        {
            "platform": "itunes",
            "url": "https://apps.apple.com/app/chess-dojo-scheduler/id123456789"
        }
    ]
}
